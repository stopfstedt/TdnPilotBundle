    public function postAction(Request $request)
{% endblock method_definition %}
    {
{% block method_body %}
        try {
            $handler = $this->get{{ entity }}Handler();

            ${{ entity|lowerfirst }} = $handler->post($this->getPostData($request));

            $authChecker = $this->get('security.authorization_checker');
            if (! $authChecker->isGranted('create', ${{ entity|lowerfirst }})) {
                throw $this->createAccessDeniedException('Unauthorized access!');
            }

            $this->get{{ entity }}Handler()->update{{ entity }}(${{ entity|lowerfirst }}, true, false);

            $answer['{{ entity|lowerfirst|pluralize }}'] = [${{ entity|lowerfirst }}];

            $view = $this->view($answer, Codes::HTTP_CREATED);

            return $this->handleView($view);
        } catch (InvalidFormException $exception) {
            return $exception->getForm();
        }
