
    /**
{% block phpdoc_method_header %}
     * Update a {{ entity }}.
     *
{% block documentation %}
{% if swagger %}
     * @ApiDoc(
     *   section = "{{ entity }}",
     *   description = "Update a {{ entity }} entity.",
     *   resource = true,
     *   input="{{ form_type }}",
     *   output="{{ namespace }}\Entity\{{ entity_namespace }}{{ entity }}",
     *   statusCodes={
     *     200 = "Updated {{ entity }}.",
     *     201 = "Created {{ entity }}.",
     *     400 = "Bad Request.",
     *     404 = "Not Found."
     *   }
     * )
     *
{% endif %}
{% endblock documentation %}
     * @Rest\View(serializerEnableMaxDepthChecks=true)
     *
     * @param Request $request
     * @param $id
     *
     * @return Response
{% endblock phpdoc_method_header %}
{% block phpdoc_method_annotations %}
{% if 'annotation' == format %}{% endif %}
{% endblock phpdoc_method_annotations %}
     */
{% block method_definition %}
    public function putAction(Request $request, $id)
{% endblock method_definition %}
    {
{% block method_body %}
        try {
            ${{ entity|lowerfirst }} = $this->get{{ entity }}Handler()
                ->find{{ entity }}By(['{{ entity_identifier }}'=> $id]);
            if (${{ entity|lowerfirst }}) {
                $code = Codes::HTTP_OK;
            } else {
                ${{ entity|lowerfirst }} = $this->get{{ entity }}Handler()
                    ->create{{ entity }}();
                $code = Codes::HTTP_CREATED;
            }

            $handler = $this->get{{ entity }}Handler();

             ${{ entity|lowerfirst }} = $handler->put(
                ${{ entity|lowerfirst }},
                $this->getPostData($request)
            );

            $authChecker = $this->get('security.authorization_checker');
            if (! $authChecker->isGranted('edit', ${{ entity|lowerfirst }})) {
                throw $this->createAccessDeniedException('Unauthorized access!');
            }

            $this->get{{ entity }}Handler()->update{{ entity }}(${{ entity|lowerfirst }}, true, true);

            $answer{{ resource ? "['" ~ entity|lowerfirst ~  "']" }} = ${{ entity|lowerfirst }};

        } catch (InvalidFormException $exception) {
            return $exception->getForm();
        }

        $view = $this->view($answer, $code);

        return $this->handleView($view);
{% endblock method_body %}
{% block method_return '' %}
    }
