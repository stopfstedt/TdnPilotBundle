<?xml version="1.0"?>
<ruleset name="TdnPilotBundle Coding Standard">
    <description>Coding standard for TdnPilotBundle</description>
    <file>Command</file>
    <file>DependencyInjection</file>
    <file>Manipulator</file>
    <file>Model</file>
    <file>Template</file>
    <file>Services</file>
    <file>Tests</file>
    <file>TdnPilotBundle.php</file>
    <exclude-pattern>Tests/Fixtures/*</exclude-pattern>
    <arg name="extensions" value="php" />
    <arg value="sp" />
    <rule ref="PSR2" />
</ruleset>
